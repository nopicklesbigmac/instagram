<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.proj.instagram.post.PostDAO">
    <select id="findByUserEmail" parameterType="String" resultType="PostDTO">
        SELECT * FROM insta_post
        WHERE email = #{email}
    </select>
    
     <!-- 게시글 삽입 -->
    <insert id="insertPost" parameterType="PostDTO">
        INSERT INTO insta_post (post_id, email, content, image_path, created_at)
        VALUES (#{postId}, #{email}, #{content}, #{imagePath}, SYSDATE)
    </insert>
    
    
</mapper>