<script>
    $(document).ready(function() {
        const accountId = "${user.email}"; // Î°úÍ∑∏Ïù∏Ìïú ÏÇ¨Ïö©ÏûêÏùò Ïù¥Î©îÏùº
        const postId = ${post.postId}; // ÌòÑÏû¨ Í≤åÏãúÎ¨º ID
        
        // Ï¢ãÏïÑÏöî ÏÉÅÌÉú ÌôïÏù∏ AJAX ÏöîÏ≤≠
        $.ajax({
            type: "GET",
            url: "/post/getLike?accountId=" + accountId + "&postId=" + postId,
            contentType: "application/json; charset=utf-8"
        }).done(function(resp) {
            if (resp === 1) { // Ïù¥ÎØ∏ Ï¢ãÏïÑÏöîÌïú Í≤ΩÏö∞
                document.getElementById('likeOrUnlike').innerHTML = '<div id="unLikeButton" class="buttons" onclick="Unlike()"><span>‚ù§Ô∏è</span></div>';
            } else { // Ï¢ãÏïÑÏöîÎ•º ÌïòÏßÄ ÏïäÏùÄ Í≤ΩÏö∞
                document.getElementById('likeOrUnlike').innerHTML = '<div id="likeButton" class="buttons" onclick="Like()"><span>ü§ç</span></div>';
            }
        }).fail(function(error) {
            console.log(JSON.stringify(error));
        });
    });

    function Like() {
        const accountId = "${user.email}";
        const postId = ${post.postId};

        // AJAX ÏöîÏ≤≠ÏúºÎ°ú Ï¢ãÏïÑÏöî Ï∂îÍ∞Ä
        $.ajax({
            type: "POST",
            url: "/like",
            contentType: "application/json",
            data: JSON.stringify({ accountId: accountId, postId: postId }),
            success: function(updatedLikeCount) {
                // ÏÑ±Í≥µ Ïãú UI ÏóÖÎç∞Ïù¥Ìä∏
                document.getElementById('likeOrUnlike').innerHTML = '<div id="unLikeButton" class="buttons" onclick="Unlike()"><span>‚ù§Ô∏è</span></div>';
                updateLikeCount(updatedLikeCount); // ÏÑúÎ≤ÑÏóêÏÑú Î∞õÏùÄ Í∞úÏàòÎ°ú ÏóÖÎç∞Ïù¥Ìä∏
            },
            error: function(error) {
                console.log("Ï¢ãÏïÑÏöî Ï∂îÍ∞Ä Ïã§Ìå®:", error);
            }
        });
    }

    function Unlike() {
        const accountId = "${user.email}";
        const postId = ${post.postId};

        // AJAX ÏöîÏ≤≠ÏúºÎ°ú Ï¢ãÏïÑÏöî Ï∑®ÏÜå
        $.ajax({
            type: "DELETE",
            url: "/unlike",
            contentType: "application/json",
            data: JSON.stringify({ accountId: accountId, postId: postId }),
            success: function(updatedLikeCount) {
            	console.log("updatedLikeCount from Unlike:", updatedLikeCount); // ÏùëÎãµ ÌôïÏù∏
                // ÏÑ±Í≥µ Ïãú UI ÏóÖÎç∞Ïù¥Ìä∏
                document.getElementById('likeOrUnlike').innerHTML = '<div id="likeButton" class="buttons" onclick="Like()"><span>ü§ç</span></div>';
                updateLikeCount(updatedLikeCount); // ÏÑúÎ≤ÑÏóêÏÑú Î∞õÏùÄ Í∞úÏàòÎ°ú ÏóÖÎç∞Ïù¥Ìä∏
            },
            error: function(error) {
                console.log("Ï¢ãÏïÑÏöî Ï∑®ÏÜå Ïã§Ìå®:", error);
            }
        });
    }

    function updateLikeCount(newCount) {
        const likeCountElement = document.getElementById('likeCounts');
        if (newCount < 0) {
            likeCountElement.textContent = "Ï¢ãÏïÑÏöî 0Í∞ú";
        } else {
            likeCountElement.textContent = `Ï¢ãÏïÑÏöî ${newCount}Í∞ú`; // newCountÎ°ú Í∞±Ïã†Îêú Í∞íÏùÑ Ï†ÅÏö©
        }
    }

</script>

                
